<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        cardView:cardElevation="3dp"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Large Text"
                android:id="@+id/nom"
                android:layout_gravity="center"
                android:gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valeur    "
                    android:id="@+id/textView3" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Val N-1 "
                    android:id="@+id/textView6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background_material_light"
                    android:text="GUIDE"
                    android:id="@+id/textView7"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background_material_light"
                    android:text="GUIDE"
                    android:id="@+id/textView8" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/error_color"
                    android:text="GUIDE"
                    android:id="@+id/textView5"
                    android:layout_weight="1.3"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:paddingLeft="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:weightSum="2"
                    >
                <Button android:text="Enregistrer" android:id="@+id/btnEnreg"
                    android:textAlignment="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_weight="1">
                </Button>
                    <Button android:text="Photo" android:id="@+id/btnPhoto"
                        android:textAlignment="center"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
